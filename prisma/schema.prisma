generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../database/database_prisma.sqlite"
}

model Pokemon {
  name String
  types TypesOnPokemons[]
  id         Int      @id @default(autoincrement())
  created_at DateTime @default(now())

  @@map("pokemons")
}

model Type {
  name String @unique
  pokeons TypesOnPokemons[]

  id         Int      @id @default(autoincrement())
  created_at DateTime @default(now())
  @@map("types")
}

model TypesOnPokemons {
  pokemon   Pokemon @relation(fields: [pokemon_id], references: [id])
  pokemon_id Int
  type      Type    @relation(fields: [type_id], references: [id])
  type_id    Int

  @@id([pokemon_id, type_id])
  @@map("types_on_pokemons")
}
